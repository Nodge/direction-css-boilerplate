#!/usr/bin/php
<?php

/*
 * Usage
 * 	./addBlock [<type>] <name> [-js] [-css] [-images] [-register]
 */

$config = array(
	'js' => true,
	'css' => true,
	'images' => true,
	'register' => true,
);


$script = array_shift($argv);
$c = 0;
$type = '';
$name = '';
foreach ($argv as $arg) {
	if ($arg[0] === '-') {
		$option = substr($arg, 1);
		$config[$option] = !$config[$option];
	}
	else {
		if ($c === 0) {
			$type = $arg;
		}
		else if ($c === 1) {
			$name = $arg;
		}
		$c++;
	}
}

if ($c === 1) {
	$name = $type;
	$type = 'block';
}

require 'addblock.inc.php';

addBlock($name, $type, $config);